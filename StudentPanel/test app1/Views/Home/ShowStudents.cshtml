@model IEnumerable<test_app1.Models.Student>

@{
    ViewBag.Title = "ShowStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>لیست دانشجو ها </h2>
@ViewBag.message
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Family)
        </th>
        <th>عملیات</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "EditStudent", new { id = item.ID }) |
                @Html.ActionLink("جزئیات", "DetailStudent", new { id = item.ID }) |
                @Html.ActionLink("حذف", "DeleteStudent", new { id = item.ID })
            </td>
        </tr>
    }

</table>
